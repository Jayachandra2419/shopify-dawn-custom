<section class="testimonials" style="padding:32px 0;">
  <div class="page-width">
    <h2>{{ section.settings.heading | default: 'Happy customers' | escape }}</h2>
    <div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(280px,1fr));gap:16px;">
      {% for block in section.blocks %}
        <article {{ block.shopify_attributes }} style="border:1px solid #eee;padding:16px;border-radius:12px;">
          <p style="margin:0 0 8px 0;">“{{ block.settings.quote | escape }}”</p>
          <p style="margin:0;opacity:.8;">— {{ block.settings.author | escape }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Testimonials",
  "settings": [{ "type": "text", "id": "heading", "label": "Heading", "default": "Happy customers" }],
  "blocks": [
    { "type": "item", "name": "Testimonial",
      "settings": [
        { "type": "text", "id": "quote", "label": "Quote" },
        { "type": "text", "id": "author", "label": "Author" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Testimonials" }]
}
{% endschema %}
